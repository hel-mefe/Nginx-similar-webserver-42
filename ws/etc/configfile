http
{
    root /www
    allowed_methods GET POST DELETE

    server
    {
        server_name name
        port 9080
        index index.html index.php home.html home.php
        not_found image.jpeg
        max_connections 20
        max_body_size 2000

        fastCGI .php /fastCGI/php-cgi
        fastCGI .py /fastCGI/py-cgi

        location /hello
        {
            allowed_methods POST
            index merci.html
            not_found 404.html
            directory_listing on
        }

        location /hello/messi
        {
            allowed_methods POST
            index merci.html
            not_found 404.html
            directory_listing on
        }

        location /
        {
            upload on
            allowed_methods POST
            not_found image.jpeg
            index index.html index.php home.html home.php
        }
    }
}