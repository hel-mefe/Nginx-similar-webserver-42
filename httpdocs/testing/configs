http
{
  allowed_methods GET POST DELETE OPTIONS HEAD
  client_max_request_timeout 20d
  client_max_body_size 30mb
  cgi_max_request_timeout 30s
  multiplexer kqueue
  root httpdocs
  proxy_cache on
  proxy_cache_register on
  proxy_cache_max_time 5s
  proxy_cache_max_size 10mb
  proxy_logs_register on

  server
  {
    allowed_methods GET POST DELETE
    port 9080
    server_name arsenal
    cgi_max_request_timeout 10s 
    root httpdocs/www
    error_page 404 error_pages/404.html
    error_page 403 error_pages/403.html
    # fastCGI .pl /usr/bin/perl
    # fastCGI .py /usr/bin/python
    # fastCGI .php bin/php-cgi

    try_index_files index.html index1.html index2.html index3.html

    # comment 1

    location /uploads
    {
      root httpdocs/uploads
      allowed_methods POST PUT
      upload on
    }

    # comment 2

    location /testing/indexes
    {
      root httpdocs/testing/indexes
      try_index_files index1.html index2.html index3.html
    }

    location /testing/
    {
      root httpdocs/testing
      directory_listing on 
    }
    # comment 3
  }

}
